extends layout

block pagestyles
	link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.min.css')

block content
	.container
		form(method='Post')
			.row
				.col-md-12.col-sm-12.col-xs-12.col-lg-12
					.panel.panel-info
						div(class='menupanel panel-heading')
							h1(class='panel-title') #{title}
						div(class='panel-body')
							.row
								.col-12
									.input-group.input-group-lg
										span(class='input-group-addon',id='studentAddon') Student
										select(id='student', class='form-control', aria-describedby='studentAddon')
											each value in students
												option=value
							.row
								.col-12
									.input-group.input-group-lg
										span(class='input-group-addon',id='dateAddon') Date
										input(id='date', class='form-control', aria-describedby='dateAddon')
							.row
								.col-12
									.input-group.input-group-lg
										span(class='input-group-addon',id='timeAddon') Start Time
										select(id='time', class='form-control', aria-describedby='timeAddon')
											each value in startTimes
												option=value
							.row
								.col-12
									.input-group.input-group-lg
										span(class='input-group-addon',id='durationAddon') Lesson Length
										select(id='duration', class='form-control', aria-describedby='durationAddon')
							.row
								.col-12
									.input-group.input-group-lg
										span(class='input-group-addon',id='instructorAddon') Instructor
										select(id='instructor', class='form-control', aria-describedby='instructorAddon')
							.row
								.col-12
									button(type='submit', class='lessonsubmitbutton btn btn-default btn-lg btn-block') Enter
						.panel-footer
block pagescripts
	script(src='//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.min.js')
	script(src='/javascripts/lessonFunctions.js')