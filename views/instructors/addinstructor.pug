extends ../layout

block pagestyles
	link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.min.css')

block content
	.container-fluid
		form(class='entryForm', method='Post')
			.row
				.col-md-12.col-sm-12.col-xs-12.col-lg-12
					.panel.panel-info
						div(class='menupanel panel-heading')
							span(class='backspan')
								a(href='./')
									span(class='glyphicon glyphicon-chevron-left', aria-hidden='true')
							div(align='center')
								h1(class='panel-title') Add Instructor
						div(class='panel-body')
							.row
								.col-12
									.input-group.input-group-lg
										span(class='input-group-addon',id='firstNameAddon') First Name
										input(id='firstName',name='firstName', class='form-control', aria-describedby='firstNameAddon')
							.row
								.col-12
									.input-group.input-group-lg
										span(class='input-group-addon',id='mobileAddon') Mobile
										input(id='mobile',name='mobile', class='form-control', aria-describedby='mobileAddon')
							.row
								.col-12
									.input-group.input-group-lg
										span(class='input-group-addon',id='emailAddon') Email
										input(id='email', name='email', class='form-control', aria-describedby='emailAddon')
							.row
								.col-12
									button(type='submit', class='submitButton btn btn-default btn-lg btn-block') Enter
						.panel-footer
block pagescripts