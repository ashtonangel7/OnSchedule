extends layout

block pagestyles

block content
	.container-fluid
		form(class='entryForm', method='Post')
			.row
				.col-md-12.col-sm-12.col-xs-12.col-lg-12
					.panel.panel-info
						div(class='menupanel panel-heading')
							div(align='center')
								h1(class='panel-title') Login
						div(class='panel-body')
							.row
								.col-12
									.input-group.input-group-lg
										span(class='input-group-addon',id='userNameAddon') User Name
										input(id='userName',name='userName', class='form-control', aria-describedby='userNameAddon')
							.row
								.col-12
									.input-group.input-group-lg
										span(class='input-group-addon',id='passwordAddon') Password
										input(id='password',name='password', class='form-control', type='password', aria-describedby='passwordAddon')
							.row
								.col-12
									button(type='submit', class='submitButton btn btn-default btn-lg btn-block') Login
						.panel-footer
block pagescripts