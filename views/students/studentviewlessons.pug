extends ../layout

block pagestyles
	link(rel='stylesheet', href='//cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css')
	link(rel='stylesheet', href='//cdn.datatables.net/responsive/2.1.1/css/responsive.dataTables.min.css')
block content
	.container-fluid
		form(class='entryForm', method='Post', action='studentattendeesview')
			.row
				.col-md-12.col-sm-12.col-xs-12.col-lg-12
					.panel.panel-info
						div(class='menupanel panel-heading')
							span(class='backspan')
								a(href='./')
									span(class='glyphicon glyphicon-chevron-left', aria-hidden='true')
							div(align='center')
								h1(class='panel-title') Student Lessons
						div(class='panel-body')
							.row
								.col-12
									table(id='dataTable',class='table table-striped table-bordered',width='100%',cellspacing='0')
										thead
											tr
												th Date
												th Minutes
												th Contract
												th Student
												th Instructor
												th Attendees
										tbody
											each lesson in lessons
												tr
													td #{lesson.start_date}
													td #{lesson.minutes}
													td #{lesson.contract_name}
													td #{lesson.customer_name}
													td #{lesson.staff_name}
													td
														button(type='button', onclick='viewLessons(this)') View Attendees
						.panel-footer
block pagescripts
	script(src='//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js')
	script(src='//cdn.datatables.net/responsive/2.1.1/js/dataTables.responsive.min.js')
	script(src='/javascripts/studentLessonsViewFunctions.js')